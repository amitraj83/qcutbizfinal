<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity.SignInActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_margin="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_weight="9">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/welcome"
        android:textSize="@dimen/panelHeadingTextSize"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/sign_up_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/sign_up_to_your_account"
        android:textColor="#0E0D0D"
        android:textSize="@dimen/panelHeading2TextSize"
        android:layout_weight="0.5"
        android:gravity="center"/>

    <EditText
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/backgroundItems"
        android:hint="@string/shop_name"
        android:drawableRight="@drawable/ic_shopping_cart_black_24dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_light"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/backgroundItems"
        android:drawableRight="@drawable/ic_account_box_black_24dp"
        android:hint="@string/your_name"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_light"/>

    <EditText
        android:id="@+id/sign_up_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/backgroundItems"
        android:drawableRight="@drawable/ic_email_black_24dp"
        android:hint="@string/email_address"
        android:fontFamily="@font/montserrat_light"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/backgroundItems"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:hint="@string/password"
        android:fontFamily="@font/montserrat_light"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/sign_up_screen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button_blue"
        android:text="@string/sign_up_upper"
        android:textColor="@android:color/white"
        android:textSize="@dimen/buttonCAPTextSize"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <TextView
        android:id="@+id/terms_txt"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/by_signing_up_you_agree_to_our_terms_and_conditions"
        android:gravity="center"/>
    </LinearLayout>

</LinearLayout>